<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member2">
	<!-- select 태그 3개 속성 : id, resultType, parameterType
	id: 사용할 명칭(필수), 현재 mapper에서 유일한 이름 사용 (namespace 다르면 같은 이름 가능)
	resultType: 조회 결과 값을 저장하기 위한 데이터 타입(형태)
		(데이터 하나에 대한 타입	 지정)
	parameterType: 전달 받은 파라미터 데이터 타입 지정(선택적)
	
	 -->
	<select id="selectAll" resultType="com.mystudy.mybatis.MemberVO">
		SELECT IDX, ID, PWD, NAME, AGE, ADDRESS, REG
		FROM MEMBER2
		ORDER BY IDX
	</select>
  
  	<select id="selectOne" parameterType="string" resultType="com.mystudy.mybatis.MemberVO">
  		SELECT IDX, ID, PWD, NAME, AGE, ADDRESS, REG
		FROM MEMBER2
		WHERE ID = #{id} 	
  	</select><!-- PreparedStatement에서는 ? 로 사용했음 -->
  	
  	<insert id="insertMember" parameterType="MemberVO">
  		INSERT INTO MEMBER2(
    		IDX, ID, PWD, NAME, AGE, ADDRESS, REG)
		VALUES(MEMBER2_SEQ.NEXTVAL, #{id}, #{pwd}, #{name}, #{age}, #{address}, SYSDATE)
  	</insert>
  	
  	<delete id="deleteMember" parameterType="MemberVO">
  		DELETE FROM MEMBER2
  		WHERE ID = #{id}
  	</delete>
</mapper>